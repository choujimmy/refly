{
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react",
      "standard-jsx"
    ],
    "plugins": [
      "flowtype"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": false
    },
    "rules": {
      "no-class-assign": 0
    },
    "globals": {
      "__DEV__": true
    }
  }
