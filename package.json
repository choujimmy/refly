{
  "name": "refly",
  "version": "1.0.0",
  "description": "Universal react forum",
  "scripts": {
    "lint:js": "eslint src scripts",
    "lint:css": "stylelint \"src/**/*.{css,less,scss,sss}\"",
    "lint": "npm run lint:js && npm run lint:css",
    "clean": "babel-node scripts/run clean",
    "copy": "babel-node scripts/run copy",
    "messages": "babel-node scripts/run messages",
    "bundle": "babel-node scripts/run bundle",
    "build": "babel-node scripts/run build",
    "render": "babel-node scripts/run render",
    "serve": "babel-node scripts/run runServer",
    "start": "babel-node scripts/run start"
  },
  "main": "index.js",
  "author": "Jimmy Chou <zliangyu@gmail.com>",
  "engines": {
    "node": ">=6.5",
    "npm": ">=3.10"
  },
  "contributors": [
    {
      "name": "Jimmy Chou",
      "email": "zliangyu@gmail.com",
      "url": "https://github.com/choujimmy/"
    }
  ],
  "homepage": "https://github.com/choujimmy/refly#readme",
  "repository": {
    "url": "git+https://github.com/choujimmy/refly.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/choujimmy/refly/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "browser-sync": "^2.17.5",
    "eslint": "^3.9.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-jsx": "^3.2.0",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-promise": "^3.3.1",
    "eslint-plugin-react": "^6.6.0",
    "eslint-plugin-standard": "^2.0.1",
    "gaze": "^1.1.2",
    "webpack": "beta",
    "webpack-hot-middleware": "^2.13.1",
    "webpack-middleware": "^1.5.1"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "koa": "next",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-intl": "^2.1.5"
  },
  "babel": {
    "presets": [
      "latest",
      "react",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react",
      "standard-jsx"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": false
    },
    "rules": {},
    "globals": {
      "__DEV__": true
    },
    "ignores": [
      "build"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
