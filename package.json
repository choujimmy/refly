{
  "name": "refly",
  "version": "1.0.0",
  "description": "Universal react forum",
  "scripts": {
    "clean": "rimraf build",
    "lint:ts": "tslint 'src/**/*.ts{,x}'",
    "lint:js": "eslint .",
    "lint": "npm run lint:js && npm run lint:ts",
    "dev": "cross-env DEBUG=refly:* DEBUG_COLORS=1 concurrently --kill-others \"npm run dev:watch-server\" \"npm run dev:run-server\"",
    "dev:run-server": "just-wait -p \"build/server.js\" && node build/server.js",
    "dev:watch-server": "webpack --colors --config tools/webpack/webpack.config.server.dev.js"
  },
  "main": "index.js",
  "author": "Jimmy Chou <zliangyu@gmail.com>",
  "contributors": [
    {
      "name": "Jimmy Chou",
      "email": "zliangyu@gmail.com",
      "url": "https://github.com/choujimmy/"
    }
  ],
  "homepage": "https://github.com/choujimmy/refly#readme",
  "repository": {
    "url": "git+https://github.com/choujimmy/refly.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/choujimmy/refly/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/debug": "^0.0.29",
    "@types/es6-promise": "^0.0.32",
    "@types/koa": "^2.0.33",
    "@types/node": "^6.0.46",
    "@types/react": "^0.14.44",
    "@types/react-dom": "^0.14.18",
    "awesome-typescript-loader": "^2.2.4",
    "concurrently": "^3.1.0",
    "cross-env": "^3.1.3",
    "eslint": "^3.9.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^2.0.1",
    "extend": "^3.0.0",
    "just-wait": "^1.0.9",
    "rimraf": "^2.5.4",
    "source-map-support": "^0.4.6",
    "tslint": "^3.15.1",
    "tslint-config-standard": "^1.5.0",
    "tslint-react": "^1.1.0",
    "typescript": "^2.0.7",
    "webpack": "2.1.0-beta.25"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "es6-promise": "^4.0.5",
    "koa": "next",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  }
}
